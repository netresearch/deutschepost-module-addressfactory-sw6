{% block sw_order_list_grid_columns %}
    {% parent() %}

    <template #column-analysisStatus="{ item }">
        <postdirekt.addressfactory.analysis-status v-bind:status="getAnalysisStatus(item)"/>
    </template>

    <mt-loader v-if="isLoading"/>
{% endblock %}
{% block sw_order_list_grid_columns_actions_view %}
    {% parent() %}

    <sw-context-menu-item
        v-if="showAnalyse(item)"
        @click="performAnalysisAction(item)"
    >
        {{ $t('postdirekt-addressfactory.orderList.actionCheck') }}
    </sw-context-menu-item>

    <sw-context-menu-item
        v-if="showUpdateAddress(item)"
        @click="updateAddressAction(item)"
    >
        {{ $t('postdirekt-addressfactory.orderList.actionApply') }}
    </sw-context-menu-item>
{% endblock %}